{
  "mappings": [
    {
      "scenarioName": "oauth",
      "requiredScenarioState": "Started",
      "request": {
        "urlPathPattern": "/oauth/token-request.*",
        "method": "POST",
        "headers": {
          "Authorization": {
            "contains": "Basic"
          },
          "Content-Type": {
            "contains": "application/x-www-form-urlencoded; charset=UTF-8"
          }
        },
        "bodyPatterns": [
          {
            "contains": "grant_type=client_credentials&scope=session%3Arole%3AANALYST"
          }
        ]
      },
      "response": {
        "status": 400
      }
    }
  ]
}