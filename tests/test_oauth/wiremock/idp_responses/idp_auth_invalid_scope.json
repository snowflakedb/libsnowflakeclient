{
  "mappings": [
    {
      "scenarioName": "Invalid scope authorization error",
      "request": {
        "urlPathPattern": "/auth/authorize",
        "method": "GET"
      },
      "response": {
        "status": 302,
        "headers": {
          "Location": "http://localhost:$PORT/snowflake/oauth-redirect?error=invalid_scope&error_description=One+or+more+scopes+are+not+configured+for+the+authorization+server+resource."
        }
      }
    }
  ]
}